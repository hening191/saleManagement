<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hening.sale.corecode.login.mapper.LoginMapper">

	<select id="findUserByLoginName" resultType="com.hening.sale.corecode.login.entity.User">
		SELECT *
 		FROM user u
		WHERE u.loginName = #{loginName}
	</select>
	

</mapper>